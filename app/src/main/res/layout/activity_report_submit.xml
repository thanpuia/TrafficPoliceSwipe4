<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportSubmitActivity"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="20dp"
               android:padding="20dp"
               android:background="#fff"
               android:orientation="vertical">

               <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <EditText
                       android:id="@+id/reportTitle"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Choose subject/Title" />

                   <ImageView
                       android:id="@+id/button1_report_title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/keyboard_arrow_right"
                       android:layout_centerVertical="true"
                       android:paddingLeft="20dp"
                       android:paddingRight="10dp"
                       android:onClick="listbuttonClick"
                       android:text="Button"/>
               </RelativeLayout>

               <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" >

                   <EditText
                       android:id="@+id/et_message"
                       android:layout_width="match_parent"
                       android:layout_height="170dp"
                       android:layout_marginTop="5dp"
                       android:gravity="top"
                       android:hint="Enter Your Message"
                       />

                   <ImageView
                       android:id="@+id/button2_camera"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentBottom="true"

                       android:layout_marginEnd="15dp"
                       android:layout_marginRight="15dp"
                       android:layout_marginBottom="61dp"
                       android:src="@drawable/camera_big"
                       android:text="Button" />




               </RelativeLayout>



           </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Note: Lorem ipsum dolor sit amet, consectetur adipis-
cing elit, sed do eiusmod tempor incididunt ut labore
et dolore magna aliqua."/>

       <!--     <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent" />-->

            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <FrameLayout
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="20dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/dashboard_cirlce"
                    android:layout_height="@dimen/dashboard_cirlce"
                    android:layout_gravity="center_horizontal"
                    android:src="@color/colorPrimaryDark" />

                <ImageView
                    android:layout_width="@dimen/dashboard_cirlce_inside"
                    android:layout_height="@dimen/dashboard_cirlce_inside"
                    android:src="@drawable/send_right"
                    android:layout_gravity="center"/>

            </FrameLayout>



     <!--       <Space
                android:layout_width="wrap_content"
                android:layout_height="93dp" />

            <Button
                android:id="@+id/chooseImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Image" />
-->



        </LinearLayout>
    </ScrollView>

</LinearLayout>